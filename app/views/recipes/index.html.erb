<header>
  <%= render 'header' %>
</header>

<div class="container mt-5" >
 <div class="row">
  <div class="cal-3">
    <button type="button" class="btn" data-toggle="modal" data-target="#exampleModal" style="background-color: rgb(255, 214, 51)" >
      新規投稿
    </button>
  </div>
  <div class="cal-6 offset-1 recipes">
    <%= render 'recipes', recipes: @recipes %>
  </div>
 </div>
</div>



<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">新規投稿</h5>
       
      </div>
      <%= form_with model: @recipe, local: false do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :dish_name, "レシピ" %>
            <%= f.text_field :dish_name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :cook_method, "作り方" %>
            <%= f.text_area :cook_method, class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= f.submit "投稿する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>