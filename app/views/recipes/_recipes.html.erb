<% recipes.each do |recipe| %>
  <div class="card mb-1 mx-auto"   style="max-width: 700px;">
    <div class="card-header " style="background-color: rgba(255, 255, 51, 0.53)">
      <%= recipe.dish_name %>
      <div class=" gap-4 d-md-flex justify-content-md-end mr-6 ">
        <%= link_to '編集', edit_recipe_path(recipe.id), method: :get, class: "btn btn-outline-success ", remote: true %>
        <%= link_to '削除', recipe_path(recipe.id), method: :delete, class: "btn btn-outline-danger",  data:{confirm: 'Are you sure?'} %>
        </div>
    </div>
    <div class="card-body" >
      <p class="card-text" ><small><%= simple_format recipe.cook_method %></small></p>
    </div>
  </div>
<% end %>

<div id="product-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
