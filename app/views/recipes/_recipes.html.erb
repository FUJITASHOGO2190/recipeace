<% recipes.each do |recipe| %>
  <div class="card mb-1"  style="max-width: 700px;">
    <div class="card-header" style="background-color: rgba(255, 255, 51, 0.53)">
      <%= recipe.dish_name %>
    </div>
    <div class="card-body" >
      <p class="card-text" ><small><%= simple_format recipe.cook_method %></small></p>
    </div>
    <div class="offset-1 pb-2">
    <%= link_to '削除', recipe_path(recipe.id), method: :delete, class: "btn btn-secondary btn-sm"%>
    </div>
  </div>
<% end %>